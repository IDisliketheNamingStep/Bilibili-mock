/* components/movie-animate-titlepic/movie-animate-titlepic.wxss */
/* 容器 */
.movie-animate-titlepic-Box {
  color: #999999;
  font-size: 24rpx;
  padding: 20rpx;
  display: flex
}
/* 左侧图片 */
.unitLeft {
  margin-right: 20rpx;
  width: 150rpx;
  height: 200rpx;
}
.unitLeft image {
  width: 150rpx;
  height: 200rpx;
  display: block;
  border-radius: 10rpx;
}
/* 中间描述 */
.movieDesc {
  /* 超过两行显示省略号 */
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  /* 超过两行显示省略号 */
}