/* components/movie-animate-recoms/movie-animate-recoms.wxss */
.movie-animate-recoms-Box {
  display: flex;
  padding: 20rpx;
}
.unitLeft {
  width:234rpx;
  height:146rpx;
  margin-right: 20rpx;
}
.unitLeft image {
  width:234rpx;
  height:146rpx;
  border-radius: 10rpx;
  display: block;
}
.unitRight {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
}
.movietitle {
  font-size: 28rpx;
  color: #212121;

  /* 超过两行显示省略号 */
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  /* 超过两行显示省略号 */
}
.openApp {
  color: #FB7299;
  border: 2rpx solid #FB7299;
  padding: 0 8rpx;
  display: inline-block;
  margin-top: 10rpx;
}