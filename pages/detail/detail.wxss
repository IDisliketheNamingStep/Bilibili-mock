/* pages/detail/detail.wxss */
.detailWrap {
  position: fixed;
  top: 0;
  bottom: 98rpx;
  left: 0;
  right: 0;
  overflow-y: auto;
}
/* 设置视频播放器满屏 */
.videoPlayerWrap {
  width: 100%;
}
/* 脚注 */
.detailFooter {
  width: 100%;
  display: inline-block;
  color: #999999;
  font-size: 12px;
  text-align: center;
  margin: 32rpx auto 160rpx;
}
/* 视频下的文字 */
.beneathVideo {
  margin: 15rpx 20rpx 0;
}
.videoTitle {
  display: block;
}
.postInfoWrap {
  margin-top: 10rpx;
  color: #999999;
  font-size: 12px;
  line-height: 15px;
  display: inline-block;
}
.postInfoWrap text {
  margin: 0 20rpx 0 0;
}
.postAuthor {
  display: inline-block;
  color: #212121;
  margin-right: 36rpx;
  padding: 10rpx 0rpx;
}
.relatedtitle {
  display: block;
  padding-top: 10rpx;
  margin: 30rpx;
  border-top: 1px solid #EEEEEE;
}